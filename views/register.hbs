<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Create New Account</h5>
                    <form class="form-signin" id="regis">
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required>
                            <label for="inputEmail">Email address</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label for="inputPassword">Password</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="inputPasswordConfirm" class="form-control" placeholder="Confirm Password" required>
                            <label for="inputPasswordConfirm">Confirm Password</label>
                        </div>

                        <div class="alert alert-danger" role="alert" id="regis-error" style="display: none;"></div>
                        <div class="alert alert-success" role="alert" id="regis-success" style="display: none;"></div>

                        <hr class="my-4">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" id="create-account-button">Create Account</button>
                        <button class="btn btn-lg btn-danger btn-block text-uppercase" id="cancel-button">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>