<div id="container">
    <nav class="navbar navbar-light bg-light justify-content-between">
        <a class="navbar-brand">Dashboard</a>
        <button class="btn btn-outline-danger my-2 my-sm-0" id="logout-button">Logout</button>
    </nav>
    <div id="body-container">
        <div id="invite-container">
            <div id="invite-inside-container">
                <button type="button" class="btn btn-dark" id="copy-button">Copy</button>
                <input id="invite-code" type="text" name="invite code" value="{{invite}}" readonly>
            </div>
        </div>
        <div id="times-container">
            <table class="table" id="times-table">
                <thead>
                    <tr class="trow">
                        <th class="tcol" scope="col">Date</th>
                        <th class="tcol" scope="col">Start Time</th>
                        <th class="tcol" scope="col">Duration</th>
                        <th class="tcol" scope="col">Booked by</th>
                        <th class="tcol" scope="col">
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                                data-target="#AddSlotsModal">Add Multiple Slots</button>
                        </th>
                    </tr>
                </thead>
                <tbody id="times-table-body">

                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="AddSlotsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title-container">
                    <h5 class="modal-title" id="exampleModalLabel">Add Multiple Slots</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div id="msa-modal-body" class="modal-body">
                <div class="modal-row">
                    <label>Start Date</label>
                    <input type="date" id="datepicker">
                </div>

                <div class="modal-row">
                    <label>Start Time</label>
                    <select class="form-control" id="start-time">
                        <option value="8" selected>8:00 AM</option>
                        <option value="9" >9:00 AM</option>
                        <option value="10" >10:00 AM</optionvalue="1">
                        <option value="11">11:00 AM</option>
                        <option value="12">12:00 PM</option>
                        <option value="13">1:00 PM</option>
                        <option value="14">2:00 PM</option>
                        <option value="15">3:00 PM</option>
                        <option value="16">4:00 PM</option>
                        <option value="17">5:00 PM</option>
                        <option value="18">6:00 PM</option>
                    </select>
                </div>

                <div class="modal-row">
                    <label>Duration</label>
                    <select class="form-control" id="duration">
                        <option value="30" selected> 30 </option>
                        <option value="60"> 60 </option>
                        <option value="90"> 90 </optionvalue="90">
                    </select>
                </div>

                <div class="modal-row">
                    <label>Quantity</label>
                    <select class="form-control" id="Quantity">
                        <option value="1" selected>1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                    </select>
                </div>
                <div class="alert alert-danger" role="alert" id="msa-w-alert" style="display: none; margin-top: 20px;"></div>
                <div class="alert alert-success" role="alert" id="msa-s-alert" style="display: none; margin-top: 20px;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="msa-submit">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="DeleteSlotsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title-container">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Slot</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div id="ds-modal-body" class="modal-body">
                <h2>Are you sure you wanna delete Slot <b id="ds-title"></b></h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="ds-submit">Yes</button>
            </div>
        </div>
    </div>
</div>